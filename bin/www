const express = require('express');
const expressLess = require('express-less');
const app = express();
const exphbs = require('express-handlebars');
const package = require(__dirname + '/../package.json');
const args = process.argv;

var files = [];
var port = 3005;

if (args.length === 3) {
    port = parseInt(args[2], 10);
}

function updateFiles() {
    files = require(__dirname + '/../res/filelist.json');
}

app.engine('handlebars', exphbs({defaultLayout: 'main'}));
app.set('view engine', 'handlebars');

app.use('/css', expressLess(__dirname + '/../less', {
	debug: true
}));

app.use('/src', express.static(__dirname + '/../src'));
app.use('/plugins', express.static(__dirname + '/../plugins'));
app.use('/integrations', express.static(__dirname + '/../integrations'));

app.get('/', function (req, res) {
    res.render('home', {
        scripts: files,
        package: package
    });
});

app.get('/full', function (req, res) {
    updateFiles();

    res.render('full', {
        scripts: files,
        package: package
    });
});

app.get('/modal', function (req, res) {
    updateFiles();

    res.render('modal', {
        scripts: files,
        package: package
    });
});

app.get('/simple', function (req, res) {
    updateFiles();

    res.render('simplemodal', {
        scripts: files,
        package: package
    });
});

app.get('/tinymce', function (req, res) {
    updateFiles();

    res.render('tinymce', {
        scripts: files,
        package: package
    });
});

app.get('/ckeditor', function (req, res) {
    updateFiles();

    res.render('ckeditor', {
        scripts: files,
        package: package
    });
});

console.log('starting on port', port);
app.listen(port);